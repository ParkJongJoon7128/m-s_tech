<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/serverStartBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="서버 시작하기" />

    <Button
        android:id="@+id/serverEndBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="서버 닫기" />

    <EditText
        android:id="@+id/socket_data_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="WIFI IP"
        android:textColorHint="#e9e9e9" />

    <Button
        android:id="@+id/socket_data_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="서버로 데이터 전송" />

</LinearLayout>